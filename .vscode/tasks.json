{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "تجميع",
      "type": "shell",
      "command": "gcc",
      "args": [
        "-g",
        "-Wall",
        "-Wextra",
        "-Werror",
        "${workspaceFolder}/src/*.c",
        "-o",
        "${workspaceFolder}/minishell"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always"
      }
    }
  ]
}